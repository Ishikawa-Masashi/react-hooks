{
  "name": "@ishikawa-masashi/react-hooks",
  "version": "0.1.4",
  "main": "./dist/index.mjs",
  "types": "./types/index.d.ts",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist types",
    "watch": "tsc -w | vite build --watch",
    "build": "tsc && vite build",
    "build:lib": "yarn run clean && tsc && vite build --config vite.config.lib.ts",
    "build:debug": "node --inspect-brk=5858 ./node_modules/.bin/vite build",
    "release:minor": "npm version minor && npm publish --access public",
    "release:patch": "npm version patch && npm publish --access public",
    "test": "vitest"
  },
  "dependencies": {},
  "devDependencies": {
    "@material-ui/core": "^4.12.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/vue": "^7.0.0",
    "@types/node": "^18.15.10",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "happy-dom": "^8.9.0",
    "jsdom": "^21.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^4.4.1",
    "sass": "^1.60.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ishikawa-Masashi/react-hooks"
  }
}
