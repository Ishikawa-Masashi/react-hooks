{
  "name": "@ishikawa-masashi/react-hooks",
  "version": "0.1.0",
  "main": "./dist/index.mjs",
  "types": "./types/index.d.ts",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist types",
    "watch": "tsc -w | vite build --watch",
    "build": "tsc && vite build",
    "build:lib": "yarn run clean && tsc && vite build --config vite.config.lib.ts",
    "build:debug": "node --inspect-brk=5858 ./node_modules/.bin/vite build",
    "release:minor": "npm version minor && npm publish --access public",
    "release:patch": "npm version patch && npm publish --access public",
    "test": "vitest"
  },
  "dependencies": {},
  "devDependencies": {
    "@material-ui/core": "^4.12.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/vue": "^6.6.1",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "happy-dom": "^8.1.0",
    "jsdom": "^20.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "typescript": "^4.9.4",
    "vite": "^3.2.5",
    "vitest": "^0.25.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ishikawa-Masashi/react-hooks"
  }
}
